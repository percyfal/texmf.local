\ProvidesPackage{beamerthemescilife}[2014/10/01 v1.1 for beamer 3.01]
\mode<presentation>

\RequirePackage{tikz}

% Settings
\usecolortheme{scilife}
\useinnertheme{scilife}
\useoutertheme{scilife}

\setbeamertemplate{itemize item}[circle]
\setbeamertemplate{itemize subitem}[dash]
\setbeamertemplate{blocks}[rounded][shadow=false]


% Setup fonts
\usefonttheme{scilife}

% Here we load beamerouterthemescilifefootline but then we
% redefine \setbeamertemplate to add a horizontal separator bar.
\useoutertheme{scilifefootline}
\setbeamertemplate{footline}[text line]{%
  \vbox{%
    \insertvrule{2.0pt}{scilife@decorations.fg}%
    \begin{beamercolorbox}[wd=\paperwidth,ht=2.25ex,dp=1ex]{scilife@decorations}%
            \Tiny\hspace*{4mm}\scilife@footline\hspace{4mm}
    \end{beamercolorbox}}}
\mode<all>
