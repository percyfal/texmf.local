\ProvidesPackage{beamerouterthemescilife}[2014/10/01 v1.0 for beamer 3.01]

\mode<presentation>

\pgfdeclareimage[height=1cm]{logoimage}{scilifelaborange}
\setbeamertemplate{title page}[default][left]

% Don't do any footline on title slide
\defbeamertemplate{footline}{title slide}{%
\relax
}


% the default contents of footline
\newcommand{\scilife@footline}{%
  \hfill
  \insertshortdate
  \hspace{1cm}
  \insertframenumber/\inserttotalframenumber}

\setbeamertemplate{footline}{
\usebeamerfont{structure}
\begin{beamercolorbox}[wd=\paperwidth,ht=2.25ex,dp=1ex]{scilife@ftcolor}%
  \Tiny\hspace*{4mm}\scilife@footline\hspace{4mm}
\end{beamercolorbox}}

% don't show navigation buttons
\setbeamertemplate{navigation symbols}{}

\mode<all>

